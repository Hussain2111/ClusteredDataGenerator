{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  }